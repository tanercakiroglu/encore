<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sec="http://www.springframework.org/schema/security"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/security
    http://www.springframework.org/schema/security/spring-security-4.2.xsd">

    <sec:global-method-security secured-annotations="enabled"  />


    <sec:http auto-config="true" use-expressions="true">
        <sec:intercept-url pattern="/app/login"       access="permitAll()"/>
        <sec:intercept-url pattern="/app/signin"      access="permitAll()" />
        <sec:intercept-url pattern="/app/statics/**"      access="permitAll()"/>
        <sec:intercept-url pattern="/app/secured/user/**" access="hasRole('ROLE_USER')" />
        <sec:intercept-url pattern="/app/secured/admin/**" access="hasRole('ROLE_ADMIN')" />
        <sec:custom-filter ref="ajaxSessionManagementFilter" before="SESSION_MANAGEMENT_FILTER" />
        <!-- access denied page -->
        <sec:access-denied-handler error-page="/app/403" />
        <sec:form-login
                login-page="/app/login"
                login-processing-url="/j_spring_security_check"
                default-target-url="/app/secured/user/home"
                authentication-failure-url="/app/login?error"
                username-parameter="email"
                password-parameter="password"
        />
        <sec:logout logout-url="/app/secured/logout" logout-success-url="/app/home"
                    delete-cookies="JSESSIONID" invalidate-session="true" />
        <sec:session-management invalid-session-url="/app/secured/logout">
            <sec:concurrency-control max-sessions="1"
                                 error-if-maximum-exceeded="false"
                                 expired-url="/app/secured/logout" /> <!-- (1) (2) -->
        </sec:session-management>

        <sec:csrf disabled="true"/>
    </sec:http>

    <bean id="ajaxSessionManagementFilter" class="configuration.AjaxRequestFilter">
        <property name="invalidSessionUrl" value="/app/secured/logout" />
    </bean>

	<bean id="customAuthenticationProvider" class="configuration.CustomAuthenticationProvider" />

	<sec:authentication-manager alias="authenticationManager">
		<sec:authentication-provider ref="customAuthenticationProvider" />
	</sec:authentication-manager>


</beans>